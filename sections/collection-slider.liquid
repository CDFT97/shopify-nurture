{% schema %}
  {
    "name": "Collection Slider",
    "settings": [
      {
        "type": "range",
        "id": "margin_top",
        "step": 5,
        "min": 0,
        "max": 200,
        "label": "Margin top (px)",
        "default": 60
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "step": 5,
        "min": 0,
        "max": 200,
        "label": "Margin bottom (px)",
        "default": 75
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured Collection"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }, {
        "type": "range",
        "id": "product_count",
        "step": 1,
        "min": 3,
        "max": 10,
        "label": "Number of products to display",
        "default": 3
      }, {
        "type": "color",
        "id": "price_text_color",
        "label": "Price text color",
        "default": "#000"
      }, {
        "type": "text",
        "id": "title_button",
        "label": "Button Tittle",
        "default": "View Programs"
      }, {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text color",
        "default": "#fff"
      }, {
        "type": "color",
        "id": "button_background_color",
        "label": "Button background color",
        "default": "#000"
      }
    ],
    "presets": [
      {
        "category": "Collection",
        "name": "Collection Slider",
        "settings": {}
      }
    ]
  }
{% endschema %}